@model WebSite.ViewModels.PostViewModel
@{
    Layout = "_GeneralLayout";
}

@section scripts 
{
    <script src="/js/new-post.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <h1>Add new publication</h1>

        <form>
            <div class="form-group">
                <label for="link">Link</label>
                <input type="url" class="form-control" id="link" placeholder="Link" required />
            </div>
            <div class="form-group">
                <label for="security-key">Security Key</label>
                <input type="password" class="form-control" id="security-key" placeholder="Security Key" required />
            </div>
            <div class="form-group">
                <label for="post-comment">Title RU</label>
                <input type="text" class="form-control" id="post-title" placeholder="Title" required />
            </div>
            <div class="form-group">
                <label for="post-comment">Comment RU</label>
                <textarea class="form-control" id="post-comment" placeholder="Comment" required></textarea>
            </div>
            <div class="form-group">
                <label for="post-comment">Title UA</label>
                <input type="text" class="form-control" id="post-title-ua" placeholder="Title" required />
            </div>
            <div class="form-group">
                <label for="post-comment">Comment UA</label>
                <textarea class="form-control" id="post-comment-ua" placeholder="Comment" required></textarea>
            </div>
            <div class="form-group">
                <label for="category-id">Category</label>
                <select class="form-control" id="category-id">
                </select>
            </div>

            <button id="add-post" class="btn btn-primary">Add</button>
        </form>

        <br/>
        <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            </div>
        </div>

    </div>
</div>
    

